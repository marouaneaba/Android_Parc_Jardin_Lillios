<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="100px"
    android:layout_marginLeft="40px"
    android:layout_marginRight="30px">

    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/latitude"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="casual"
                android:text="TextView" />

            <TextView
                android:id="@+id/logitude"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/Sport"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.31"
                    android:background="#2abe3d"
                    android:backgroundTint="#2abe3d"
                    android:fontFamily="casual"
                    android:text="Sport"
                    android:textColor="#331c0c"
                    android:textStyle="normal|bold"
                    android:typeface="monospace" />

                <TextView
                    android:id="@+id/Etude"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30px"
                    android:layout_weight="0.19"
                    android:background="#2abe3d"
                    android:fontFamily="casual"
                    android:text="Etude"
                    android:textColor="#331c0c"
                    android:textStyle="normal|bold"
                    android:typeface="monospace" />

                <TextView
                    android:id="@+id/Restauration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30px"
                    android:background="#2abe3d"
                    android:fontFamily="casual"
                    android:text="Restauration"
                    android:textColor="#331c0c"
                    android:textStyle="normal|bold"
                    android:typeface="monospace" />

                <Button
                    android:id="@+id/iteneraire"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30px"
                    android:layout_weight="0.56"
                    android:fontFamily="casual"
                    android:onClick="iteneraire"
                    android:text="ItenÃ©r.."
                    android:textAllCaps="false"
                    android:textSize="14sp"
                    android:textStyle="normal|bold"
                    android:typeface="monospace" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:srcCompat="@mipmap/ic_launcher" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:srcCompat="@android:drawable/screen_background_dark_transparent" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/common_full_open_on_phone" />
            </LinearLayout>

            <TextView
                android:id="@+id/Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="casual"
                android:text="TextView"
                android:textStyle="normal|bold"
                android:typeface="monospace" />

            <RatingBar
                android:id="@+id/ratingBar"
                android:layout_width="wrap_content"
                android:layout_height="41dp"
                android:numStars="5"
                android:rating="4"
                android:scaleY="0.5"
                android:scaleX="0.5"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="casual"
                    android:text="TextView"
                    android:typeface="monospace" />

                <TextView
                    android:id="@+id/Horaire"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="casual"
                    android:text="TextView"
                    android:textStyle="bold"
                    android:typeface="monospace" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="casual"
                    android:text="TextView"
                    android:typeface="monospace" />

                <TextView
                    android:id="@+id/Addresse"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="casual"
                    android:text="TextView"
                    android:textStyle="bold"
                    android:typeface="monospace" />

            </LinearLayout>

            <TextView
                android:id="@+id/Description"
                android:layout_width="match_parent"
                android:layout_height="89dp"
                android:text="TextView" />

            <Button
                android:id="@+id/button9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="440px"
                android:fontFamily="casual"
                android:text="Donner un avis"
                android:textAllCaps="false"
                android:textSize="14sp"
                android:textStyle="normal|bold"
                android:typeface="monospace"
                android:onClick="AjoutCommentaire"/>


            <LinearLayout
                android:id="@+id/liner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>