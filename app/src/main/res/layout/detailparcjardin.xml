<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#007f00"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:weightSum="1">

        <TextView
            android:id="@+id/NmarParcJardin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.96"
            android:fontFamily="georgia"
            android:text="Parcs Jardins Lillios"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold"
            android:typeface="monospace" />

        <Button
            android:id="@+id/iteneraire"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="end"
            android:layout_marginLeft="30px"
            android:layout_marginRight="10px"
            android:background="@drawable/localiser"
            android:fontFamily="casual"
            android:onClick="iteneraire"
            android:gravity="end"
            android:textAllCaps="false" />
    </LinearLayout>

    <ScrollView


        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@android:style/Widget.DeviceDefault.ScrollView">

        <LinearLayout

            android:layout_marginTop="0px"
            android:layout_marginLeft="40px"
            android:layout_marginRight="30px"
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.31"
                android:layout_marginTop="0px"
                android:layout_marginBottom="0px">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/imgCategories">


                </LinearLayout>
            </HorizontalScrollView>

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.31"
                android:layout_marginTop="0px"
                android:layout_marginBottom="0px">

                <LinearLayout
                    android:id="@+id/imgLinear"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal" >

                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:text="Name "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Name"
                android:fontFamily="cursive"
                android:typeface="monospace"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textAlignment="center" />

            <RatingBar
                android:layout_gravity="center"
                android:id="@+id/ratingBar"
                android:layout_width="wrap_content"
                android:layout_height="41dp"
                android:numStars="5"
                android:scaleY="0.5"
                android:scaleX="0.5"
                android:saveEnabled="true"
                style="@android:style/Theme" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="74dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="casual"
                    android:text="Horaire :"
                    android:typeface="monospace"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/horaire"></LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="casual"
                    android:text="Addresse :"
                    android:typeface="monospace"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/Addresse"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="casual"
                    android:text="Addresse :"
                    android:textStyle="bold"
                    android:typeface="monospace"
                    android:textSize="12sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/Description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description"
                android:fontFamily="casual"
                android:typeface="monospace"
                android:textSize="14sp"
                android:textStyle="bold"
                android:maxLength="80"
                android:layout_marginTop="20px"/>

            <TextView
                android:text="Plus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/plus"
                android:layout_weight="0.31"
                android:fontFamily="cursive"
                android:textColor="#0000ff"
                android:gravity="end"
                android:typeface="monospace"
                android:textStyle="normal|bold"
                android:textSize="18sp"
                android:layout_marginBottom="30px"
                android:onClick="Plus"/>

            <Button
                android:id="@+id/button9"
                android:layout_width="131dp"
                android:layout_height="38dp"
                android:layout_marginLeft="40px"
                android:fontFamily="casual"
                android:onClick="AjoutCommentaire"
                android:text="Donner un avis"
                android:textAllCaps="false"
                android:textSize="14sp"
                android:textColor="#ffffff"
                android:background="#007f00"
                android:textStyle="normal|bold"
                android:layout_gravity="end"
                android:typeface="monospace" />


            <LinearLayout
                android:id="@+id/liner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>